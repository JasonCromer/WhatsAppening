<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_marker_description"
    tools:context="com.dev.cromer.jason.whatshappening.activities.MarkerDescriptionActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00BCD4"
        android:layout_below="@+id/upvoteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:id="@+id/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textview_border"
        android:text=""
        android:id="@+id/markerDescriptionTextView"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/upvoteButton"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/marker_voting_description"
        android:background="@drawable/ic_thumb_up_black_24dp"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/downvoteButton"
        android:layout_toLeftOf="@+id/downvoteButton"
        android:layout_toStartOf="@+id/downvoteButton" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/downvoteButton"
        android:contentDescription="@string/marker_voting_description"
        android:background="@drawable/ic_thumb_down_black_24dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/markerDescriptionTextView"
        android:layout_alignRight="@+id/commentsListView"
        android:layout_alignEnd="@+id/commentsListView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/markerLikesTextView"
        android:layout_above="@+id/view"
        android:layout_alignLeft="@+id/markerDescriptionTextView"
        android:layout_alignStart="@+id/markerDescriptionTextView"
        android:layout_toLeftOf="@+id/upvoteButton"
        android:layout_toStartOf="@+id/upvoteButton" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentsListView"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/upvoteButton" />

</RelativeLayout>